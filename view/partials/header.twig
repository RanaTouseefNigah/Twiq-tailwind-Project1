<header
	class="flex items-center justify-between px-6 mx-10 py-4 shadow-sm bg-white text-sm font-medium ">
	<!-- Logo -->
	<div class="flex items-center">
		<img src="https://om.arganicnatural.com/cdn/shop/files/logo.jpg?v=1727524030&width=165" alt="Logo" class="h-16"/>
	</div>

	<!-- Navigation -->
	<nav class="flex items-center gap-6">
		<div
			class="relative group flex items-center gap-1 cursor-pointer">
			<!-- Current language display -->
			{% for product in lang|slice(0, 1) %}
				<div class="flex items-center gap-1">
					<img src="{{ product.flag }}" alt="{{ product.name }}" class="w-6 h-4"/>
					{{ product.name }}
					<!-- Dropdown arrow -->
					<svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
					</svg>
				</div>
			{% endfor %}

			<!-- Dropdown menu -->
			<div class="absolute top-full right-0 mt-3 w-24 bg-white rounded-md shadow-lg z-50 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 origin-top transform scale-y-95 group-hover:scale-y-100">
				<ul class="py-1">
					<li>
						<a href="?lang=en" class="flex items-center gap-2  py-2 text-gray-800 hover:bg-gray-100 hover:text-amber-600 justify-end ">
							<span>English</span>
							<img src="https://flagpedia.net/data/flags/w580/us.webp" alt="" class="w-6 h-4"/>
						</a>
					</li>
					<li>
						<a href="?lang=ar" class="flex items-center gap-2  py-2 text-gray-800 hover:bg-gray-100 hover:text-amber-600 justify-end ">
							<span>Ø§Ù„Ø¹Ø±Ø¨ÙŠØ©</span>
							<img src="https://flagpedia.net/data/flags/w580/sa.webp" alt="" class="w-6 h-4"/>
						</a>
					</li>
				</ul>
			</div>
		</div>
		<ul class="flex space-x-6">
			{% for item in menu %}
				<li>
					<a href="{{ item.link }}" class="hover:text-amber-600  duration-200">{{ item.name }}</a>
				</li>
			{% endfor %}
		</ul>
	</nav>

	<!-- Right icons -->
	<div
		class="flex items-center space-x-6">
		<!-- Button to trigger modal -->
		<button id="searchButton" class="hover:text-amber-600 p-2 rounded-full  duration-200">
