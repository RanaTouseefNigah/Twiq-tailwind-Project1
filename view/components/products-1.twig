<div class="container mx-auto px-4 py-8 sm:py-16" dir="rtl">

	<div class="text-center mb-16">
		<h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
			<span class="block">Clothes</span>

			<span class="block text-[#9c8a8a] mt-2">
				ملابس
			</span>
		</h2>
		<div class="mt-8 flex justify-center">
			<div class="w-16 h-1 bg-[#9c8a8a] rounded-full"></div>
		</div>
	</div>

	<div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
		{% for product in clothes %}
			<!-- CARD -->
			<div
				class="relative flex flex-col sm:flex-row gap-4 p-4 rounded-xl border border-gray-200 hover:shadow-lg transition-shadow">
				<!-- Product Image -->
				<a href="#" class="block aspect-square w-full sm:w-32 md:w-40 rounded-lg overflow-hidden">
					<img src="{{ product.image }}" alt="{{ product.name }}" class="w-full h-full object-cover"/>
				</a>

				<!-- Product Info -->
				<div class="flex-1">
					<div class="flex justify-between items-start">
						<div>
							<h3 class="text-lg font-semibold">{{ product.product_number }}</h3>
							<p class="text-sm text-red-600 mt-1">
								{% if product.discount_applied %}
									Discount Applied
								{% endif %}
							</p>

							<!-- Price -->
							<div class="flex items-center mt-2">
								<span class="text-lg font-bold">
									{% if product.discount_applied %}
										<p class="text-gray-600">
											{{ product.discount_price }}
										</p>
									{% else %}
										<p class="text-gray-600">
											{{ product.discount_price }}
											<del class="text-red-600">{{ product.original_price }}</del>
										</p>

									{% endif %}
								</span>
							</div>
						</div>

						<!-- Wishlist Button and Sold Out Badge -->
						<div class="flex items-center gap-2">
							<span class="text-white px-2 py-1 rounded-full text-xs font-bold uppercase">
								{% if product.in_stock %}
									<p class="text-green-600">In Stock</p>
								{% else %}
									<p class="text-red-600">Out of Stock</p>
								{% endif %}
							</span>
							<button class="p-1.5 rounded-full hover:!text-amber-600 duration-200 text-gray-500">
								<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
									<path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
								</svg>
							</button>
						</div>
					</div>

					<!-- Categories -->
					<div class="flex items-center mt-2 text-sm text-gray-500">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="fill-yellow-400 text-yellow-400 mr-1">
							<polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
						</svg>
						<span>{{ product.category }}
							|
							{{ product.name }}</span>
					</div>

					<!-- Add to Cart Button -->
					<button class="mt-4 w-full py-2 rounded-full text-sm
																		    {{
																		            product.in_stock
																		              ? 'bg-black  text-white cursor-pointer'
																		              : 'bg-gray-200 text-gray-500 cursor-not-allowed'
																		          }}" {% if not product.in_stock %} disabled {% endif %}>
						Add To Cart
					</button>
				</div>
			</div>
		{% endfor %}
	</div>
</div>
