<div class="container mx-auto px-4 py-8 sm:py-16" dir="rtl">
	<div class="text-center mb-16">
		<h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
			<span class="block">Cosmetics</span>
			<span class="block text-[#9c8a8a] mt-2">
				مستحضرات التجميل
			</span>
		</h2>
		<div class="mt-8 flex justify-center">
			<div class="w-16 h-1 bg-[#9c8a8a] rounded-full"></div>
		</div>
	</div>

	<!-- Container -->
	<div
		class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
		<!-- Card -->
		{% for product in cosmetics %}
			<div
				class="relative group w-full bg-white rounded-lg shadow p-4 hover:shadow-lg transition-all duration-300">
				<!-- Stock Badge -->
				<div class="absolute top-2 left-2 text-white text-sm px-2 py-0.5 rounded-full uppercase font-bold bg-orange-500 z-10">

					{{ product.discount }}-

				</div>

				<!-- Product Image -->
				<div class="aspect-square overflow-hidden relative">
					<img src="{{ product.image }}" alt="{{ product.name }}" class="w-full h-full object-contain mx-auto transition-transform duration-500 group-hover:scale-105"/>
				</div>

				<!-- Hover Icons -->
				<div class="absolute top-4 right-4 flex flex-col space-y-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">

					<a href="#" class="relative hover:text-white hover:bg-amber-600 transition-colors duration-200 p-2 rounded-full shadow bg-white">
